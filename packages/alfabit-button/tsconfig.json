{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"lib": [
			"dom",
			"ESNext"
		],
		"jsx": "react",
		"declaration": true,
		"importHelpers": true,
		"declarationDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
